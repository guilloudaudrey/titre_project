

{% block content %}

{% trans_default_domain 'FOSUserBundle' %}
<div class=" register_container col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
    <div class="panel panel-info ">
        <div class="panel-heading">
            <h3 class="panel-title">Modification du mot de passe</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

            <div class="form-group">
                <label for="current_password">Mot de passe actuel</label>
                {{ form_widget(form.current_password)}}
            </div>

            <div class="form-group">
                <label for="new_password.first">Nouveau mot de passe</label>
                {{ form_widget(form.plainPassword.first)}}
            </div>

            <div class="form-group">
                <label for="new_password.second">Répéter le nouveau mot de passe</label>
                {{ form_widget(form.plainPassword.second)}}
            </div>

            {{ form_widget(form) }}
            <div>
                <input class="btn btn-info" type="submit" value="Modifier" />
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
