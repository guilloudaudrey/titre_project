{% extends 'base.html.twig' %}

{% block body %}
    <h1>Postresponse</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ postResponse.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ postResponse.text }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if postResponse.createdAt %}{{ postResponse.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if postResponse.updatedAt %}{{ postResponse.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('postresponse_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('postresponse_edit', { 'id': postResponse.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
