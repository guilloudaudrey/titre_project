{% extends 'base.html.twig' %}

{% block content %}



    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="{{ path('post_index') }}">typo</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <button style="background-image:url('{{asset('/avatars/'~app.user.getAvatarFilename()) }}')" href="#" class="dropdown-toggle avatar_menu" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('fos_user_profile_show') }}" >Mon profil</a>
                                </li>
                                <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                                </li>
                            </ul>
                        </li>
                        <li><a href="{{ path('fos_user_profile_show') }}"><span class="glyphicon glyphicon-bell"></span></a></li>
                    </ul>

                {% else %}
                    {% if not app.user %}
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="{{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-log-in"></span>{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                            <li><a href="{{ path('fos_user_registration_register') }}"><span class="glyphicon glyphicon-user"></span>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a></li>
                        </ul>
                    {% endif %}

                    {% if app.request.hasPreviousSession %}
                        {% for type, messages in app.session.flashbag.all() %}
                            {% for message in messages %}
                                <div class="flash-{{ type }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                {% endif %}
            </div><!--/.nav-collapse -->
        </div>
    </nav>

{% endblock %}