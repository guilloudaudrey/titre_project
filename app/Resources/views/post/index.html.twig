{% extends 'base.html.twig' %}
         
{% block content %}

{% include 'menu.html.twig' %}

        
<div class="container">


    <table>
        <thead>
            <tr>
                <th>Text</th>
                <th>Createdat</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.text }}</a></td>
                <td>{% if post.createdAt %}déposé le {{ post.createdAt|date('Y-m-d H:i:s') }} par {{ post.user }} {% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('post_new') }}">Create a new post</a>
</div>
{% endblock %}
