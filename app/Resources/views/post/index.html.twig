{% extends 'base.html.twig' %}

{% block content %}
    {% block head %}
        <script src="https://code.jquery.com/jquery-1.12.2.min.js" integrity="sha256-lZFHibXzMHo3GGeehn1hudTAP3Sc0uKXBXAzHX1sjtk=" crossorigin="anonymous"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}
{% include 'menu.html.twig' %}

    <div class="container-fluid">
    <div class="row index_create_post_button" >
        <div style="height: 280px;  background-color: darkcyan;">
            <p>Une hésitation sur la bonne orthographe de votre phrase ? <br>Demandez à la communauté Typo de vous relire !</p>
        </div>
    </div>
        <div class="container">
        <div class="row buttons_action">
            <a class="btn btn-info " href="{{ path('post_new') }}"><span class="glyphicon glyphicon-pencil"></span> Poster une nouvelle demande</a>
            <!--{% if app.user %}
                {% if 'ROLE_PROOFREADER' in app.user.roles %}
                {% else %}
                    <a class="btn btn-default" href="{{ path('quiz_answer_new') }}"><span class="glyphicon glyphicon-edit"></span> Devenir correcteur</a>
                {% endif %}
            {% endif %}-->
        </div>

        <div class="row" >

            <hr>
            {% for post in posts|sort|reverse %}
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 ">
                    <div class="thumbnail post_thumbnail">
                        <span class="glyphicon glyphicon-question-sign"></span>

                        {% if app.user %}
                        {% if 'ROLE_PROOFREADER' in app.user.roles %}
                            <a href="{{ path('post_proofreader_show', { 'id': post.id }) }}">{{ post.text[:50] }}...</a>
                            {% else %}
                                <a class="post_link" href="" data-toggle="modal" data-target="#myModal{{ loop.index }}">{{ post.text[:50] }}...</a>
                        {% endif %}
                        {% else %}

                            <a class="post_link" href="" data-toggle="modal" data-target="#myModal{{ loop.index }}" value="{{ post.id }}">{{ post.text[:50] }}...</a>
                        {% endif %}
                        <p class="date_and_user">{% if post.createdAt %}posté le {{ post.createdAt|date('Y-m-d H:i:s') }}</br>par {{ post.user }}{% endif %}

                        <div class="panel-footer">
                            <p>
                                <span>{{ post.postResponses|length }}</span>
                                <span class="glyphicon glyphicon-comment"></span>
                            {% if post.status == "active" %}
                            <span class="label label-default"> Non résolu</span>
                            {% else %}
                                <span class="label label-info">Résolu</span>
                            {% endif %}
                            </p>
                        </div>
                    </div>
                </div>

    <!-- Modal -->
        <div id="myModal{{ loop.index }}" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content col-lg-5 col-lg-offset-3">

                    <!--  <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>-->

                    <div class="modal-body">
                        <a href="{{ path('post_show', { 'id': post.id }) }}" class="btn btn-default">Consulter</a>
                        <a href="{{ path('post_proofreader_show', { 'id': post.id }) }}" class="btn btn-info">Contribuer</a>
                    </div>
                </div>
            </div>
        </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="text-center">{{ knp_pagination_render(posts) }}</div>
        </div>
    </div>
    </div>







{% include 'footer.html.twig' %}
{% endblock %}
