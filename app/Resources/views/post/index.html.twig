{% extends 'base.html.twig' %}

{% block content %}
    {% block head %}
        <script src="https://code.jquery.com/jquery-1.12.2.min.js" integrity="sha256-lZFHibXzMHo3GGeehn1hudTAP3Sc0uKXBXAzHX1sjtk=" crossorigin="anonymous"></script>
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}
{% include 'menu.html.twig' %}

    <div class="container">
    <div class="row index_create_post_button">
        <div style="height: 100px; background-color: lightblue">
        </div>
    </div>
        <div class="button_new_post">
            <a class="btn btn-info " href="{{ path('post_new') }}"><span class="glyphicon glyphicon-pencil"></span> Poster une nouvelle demande</a>
        </div>
   {% if app.user %}
        {% if 'ROLE_PROOFREADER' in app.user.roles %}
        {% else %}
            <a class="btn btn-default" href="{{ path('quiz_answer_new') }}"><span class="glyphicon glyphicon-edit"></span> Devenir correcteur</a>
        {% endif %}
        {% endif %}

        <div class="row">
            <div class="form-group col-md-4 pull-right">
                <select class="form-control">
                    <option value="">Du plus récent au plus ancien</option>
                    <option value="">Du plus ancien au plus récent</option>
                    <option value="">Sujets non résolus</option>
                    <option value="">Sujets résolus</option>
                </select>
            </div>
        </div>

        <div class="row" >
            <hr>
            {% for post in posts|sort|reverse[:8] %}
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 ">
                    <div class="thumbnail post_thumbnail">
                        <span class="glyphicon glyphicon-question-sign"></span>

                        {% if app.user %}
                        {% if 'ROLE_PROOFREADER' in app.user.roles %}

                            <a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.text[:50] }}...</a>
                            {% else %}

                                <a href="" data-toggle="modal" data-target="#myModal{{ loop.index }}">{{ post.text[:50] }}...</a>
                        {% endif %}
                        {% else %}

                            <a href="" data-toggle="modal" data-target="#myModal{{ loop.index }}" value="{{ post.id }}">{{ post.text[:50] }}...</a>


                        {% endif %}

                        <p class="date_and_user">{% if post.createdAt %}posté le {{ post.createdAt|date('Y-m-d H:i:s') }}</br>par {{ post.user }}{% endif %}

                        <div class="panel-footer">
                            <p>
                                <span>{{ post.postResponses|length }}</span>
                                <span class="glyphicon glyphicon-comment"></span>
                            {% if post.status == "active" %}
                                <span class="not_resolved"> Non résolu</span>
                            {% else %}
                                <span class="resolved">Résolu</span>
                            {% endif %}
                            </p>
                        </div>
                    </div>
                </div>

    <!-- Modal -->
        <div id="myModal{{ loop.index }}" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>

                    <div class="modal-body">
                        <a href="{{ path('post_show', { 'id': post.id }) }}">Consulter</a>
                        <a href="#" class="btn btn-info">Some text in the modal.</a>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>

                </div>
            </div>
        </div>




            {% endfor %}
        </div>
    </div>

    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>





{% include 'footer.html.twig' %}
{% endblock %}
