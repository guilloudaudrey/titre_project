<h2>Historique</h2>
<div class="row ">
    <div class="col-lg-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Demandes</h3>
            </div>
            {% if posts is empty %}
            <div class="panel-body">
                <p>Aucune demande</p>
            </div>
            {% else %}
            {% for post in posts%}
                <div class="panel-body">
                    <a href="{{ path('post_show', { 'id': post.id }) }}" >{{ post.text[:50] }}...</a>
                    {{ post.createdAt|date('Y-m-d') }}

                </div>
            {% endfor %}
            {% endif %}
            <div class="row">
                <div class="text-center">{{ knp_pagination_render(posts) }}</div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Réponses</h3>
            </div>
            {% if postAnswers is empty %}
                <div class="panel-body">
                    <p>Aucune réponse</p>
                </div>
                {% else %}

            {% for postAnswer in postAnswers%}
                <div class="panel-body">
                    <a href="{{ path('post_show', { 'id': postAnswer.post.id }) }}" >{{ postAnswer.text[:50] }}...</a>
                    {{ postAnswer.createdAt|date('Y-m-d') }}
                </div>
            {% endfor %}
            {% endif %}
            <div class="row">
                <div class="text-center">{{ knp_pagination_render(posts) }}</div>
            </div>
        </div>
    </div>
</div>